<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/base_page_background"
        android:orientation="vertical">


        <TextView
            android:id="@+id/reminder_set_psd"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="@string/login_set_new_dan_cancel_od"
            android:textColor="@color/base_primary_text"
            android:textSize="@dimen/base_text_size_1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/base_size_1"
            android:paddingRight="@dimen/base_size_1">

            <LinearLayout
                android:id="@+id/ll_old_psd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_size_24"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="@string/login_old_psd"
                    android:textColor="@color/base_primary_text"
                    android:textSize="@dimen/base_text_size_1" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/base_size_1"
                    android:paddingRight="@dimen/base_size_1">

                    <EditText
                        android:id="@+id/et_old_psd"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:digits="1234567890qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
                        android:hint="@string/login_please_input_old_psd"
                        android:inputType="textPassword"
                        android:maxLength="20"
                        android:maxLines="1"
                        android:textColor="@color/base_primary_text"
                        android:textColorHint="@color/base_secondary_text"
                        android:textSize="@dimen/base_text_size_1" />

                    <ImageView
                        android:id="@+id/delete_old_psd"
                        android:layout_width="@dimen/base_size_6"
                        android:layout_height="@dimen/base_size_6"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/base_size_1"
                        android:layout_toLeftOf="@+id/switch_old_psd"
                        android:scaleType="fitEnd"
                        android:src="@drawable/ic_delete"
                        android:visibility="invisible" />

                    <CheckBox
                        android:id="@+id/switch_old_psd"
                        android:layout_width="@dimen/base_size_8"
                        android:layout_height="@dimen/base_size_4"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/login_psd_switcher"
                        android:button="@null"
                        android:checked="false"
                        android:scaleType="fitEnd" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_size_24"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_new_psd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="@string/login_new_psd"
                    android:textColor="@color/base_primary_text"
                    android:textSize="@dimen/base_text_size_1" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/base_size_1"
                    android:paddingRight="@dimen/base_size_1">

                    <EditText
                        android:id="@+id/et_new_psd"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:digits="1234567890qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
                        android:hint="@string/login_input_new_psd_rule"
                        android:inputType="textPassword"
                        android:maxLength="20"
                        android:maxLines="1"
                        android:textColor="@color/base_primary_text"
                        android:textColorHint="@color/base_secondary_text"
                        android:textSize="@dimen/base_text_size_1" />

                    <ImageView
                        android:id="@+id/delete_new_psd"
                        android:layout_width="@dimen/base_size_6"
                        android:layout_height="@dimen/base_size_6"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@+id/switch_new_psd"
                        android:scaleType="fitEnd"
                        android:src="@drawable/ic_delete"
                        android:visibility="invisible" />

                    <CheckBox
                        android:id="@+id/switch_new_psd"
                        android:layout_width="@dimen/base_size_8"
                        android:layout_height="@dimen/base_size_4"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/login_psd_switcher"
                        android:button="@null"
                        android:checked="false"
                        android:scaleType="fitEnd" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_size_24"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_verification_psd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="@string/login_new_psd_verification"
                    android:textColor="@color/base_primary_text"
                    android:textSize="@dimen/base_text_size_1" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/base_size_1"
                    android:paddingRight="@dimen/base_size_1">

                    <EditText
                        android:id="@+id/et_verification_psd"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:digits="1234567890qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
                        android:hint="@string/login_please_input_psd_again"
                        android:inputType="textPassword"
                        android:maxLength="20"
                        android:maxLines="1"
                        android:textColor="@color/base_primary_text"
                        android:textColorHint="@color/base_secondary_text"
                        android:textSize="@dimen/base_text_size_1" />

                    <ImageView
                        android:id="@+id/delete_verification_psd"
                        android:layout_width="@dimen/base_size_6"
                        android:layout_height="@dimen/base_size_6"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@+id/switch_verification_psd"
                        android:scaleType="fitEnd"
                        android:src="@drawable/ic_delete"
                        android:visibility="invisible" />

                    <CheckBox
                        android:id="@+id/switch_verification_psd"
                        android:layout_width="@dimen/base_size_8"
                        android:layout_height="@dimen/base_size_4"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/login_psd_switcher"
                        android:button="@null"
                        android:checked="false"
                        android:scaleType="fitEnd" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <Button

            android:id="@+id/bt_finish"
            style="@style/login_btn"
            android:layout_marginLeft="@dimen/base_size_2"
            android:layout_marginRight="@dimen/base_size_2"
            android:layout_marginTop="@dimen/base_size_19"
            android:text="@string/login_complete"
            android:textSize="@dimen/base_text_size_1" />
    </LinearLayout>


</RelativeLayout>